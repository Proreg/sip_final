<%= render 'partials/top'%><!-- Renders the top of the pages-->
	<div class="row">
		<div class="large-12 columns">
            <h3 class="subheader">Edição da Seguradora: <%= InsInsuranceCompany.find(params[:ins_insurance_company_id]).commercial_name %></h3>  
        </div>
	</div>
    <br/>
    <div class='row'>
    	<div class='columns large-12'>    		
    		<table>
    			<thead>
    				<tr>
    					<th>Nome</th>
    					<th>Ativo</th>
    				</tr>
    			</thead>
    			<tbody>    	
    				<%= form_tag(action: 'inspectors_change', method: :put)do %>
    					<% @inspectors_company.each do |relationship| -%>
							<tr>
    							<%= fields_for 'inspector[]' , relationship do |relationship_fields| -%>
      								<td>
      									<%= InsInspector.find(relationship.ins_inspector_id).name%>
	  								</td>	
        							<td>
        								<center>
        									<%= relationship_fields.check_box :active, {}, 't', 'f' %>
        								</center>
									</td>   
      							<% end -%>
    						<% end %>
    					</tr>
    			</tbody>
			</table>
    	</div>	
	</div>
	<div class='row'>
		<div class="columns large-12">
			<%= submit_tag("Editar", :class => 'button success') %>
			<% end -%>
		</div>
	</div>
            
                
	
<%= render 'partials/bottom'%><!-- Renders the top of the pages-->
